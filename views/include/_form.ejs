<form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Description</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" >
        </div>

        <div class="form-group">
            <label for="gender" class="text-light">Status</label>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="status" value="True" >
                <label for="radio-4" class="radio-label">True</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="status" value="False" >
                <label for="radio-5" class="radio-label">False</label>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>